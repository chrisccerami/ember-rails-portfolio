<div class="small-8 columns panel">
  <h4>
    {{title}}
  </h4>
  <div>
    Posted at: {{created_at}}
  </div>
  <div>
    Last updated at: {{updated_at}}
  </div>

  {{#if isEditing}}
    {{partial 'posts/edit'}}
    <button {{action 'doneEditing'}}>Done</button>
  {{else}}
    <button {{action 'edit'}}>Edit</button>
  {{/if}}
  <button {{action 'delete'}}>Delete</button>
  <div>
    {{body}}
  </div>
</div>
